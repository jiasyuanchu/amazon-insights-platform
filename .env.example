# ==============================================
# üöÄ AMAZON INSIGHTS PLATFORM CONFIGURATION
# ==============================================

# ==============================================
# üåê ENVIRONMENT SETTINGS
# ==============================================
ENVIRONMENT=development
DEBUG=true

# ==============================================
# üîß APPLICATION SETTINGS
# ==============================================
APP_NAME="Amazon Insights Platform"
APP_VERSION="0.1.0"
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1

# ==============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/amazon_insights
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ==============================================
# üöÄ REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://redis:6379/0
REDIS_MAX_CONNECTIONS=50

# ==============================================
# üîÑ CELERY CONFIGURATION
# ==============================================
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# ==============================================
# üîë EXTERNAL API KEYS
# ==============================================
# OpenAI API (for AI-powered insights)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Firecrawl API (for web scraping)
FIRECRAWL_API_KEY=your-firecrawl-api-key
FIRECRAWL_API_URL=https://api.firecrawl.dev

# ==============================================
# üîê AUTHENTICATION & SECURITY
# ==============================================
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Security Headers
ENABLE_SECURITY_HEADERS=true
HTTPS_ONLY=false
SECURE_COOKIES=false

# ==============================================
# üõ°Ô∏è RATE LIMITING
# ==============================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ENABLE_RATE_LIMITING=true
RATE_LIMIT_STORAGE_URL=redis://redis:6379/3

# ==============================================
# üìä MONITORING & METRICS
# ==============================================
PROMETHEUS_ENABLED=true
SENTRY_DSN=

# Grafana & Flower Monitoring
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-this-password
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-password

# ==============================================
# üîç LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_STRUCTURED_LOGGING=true

# ==============================================
# üíæ CACHING SETTINGS
# ==============================================
CACHE_TTL=3600
COMPETITOR_CACHE_TTL=21600
ANALYSIS_CACHE_TTL=7200
INTELLIGENCE_REPORT_CACHE_TTL=14400

# ==============================================
# üîî NOTIFICATION SETTINGS
# ==============================================
# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# ==============================================
# üê≥ DOCKER & DEPLOYMENT
# ==============================================
WORKERS=4
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=65

# Health Check Settings
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_INTERVAL=30

# ==============================================
# üåü FEATURE FLAGS
# ==============================================
ENABLE_AI_INSIGHTS=true
ENABLE_COMPETITOR_ANALYSIS=true
ENABLE_PRICE_TRACKING=true
ENABLE_ALERT_SYSTEM=true

# ==============================================
# üìà BUSINESS LIMITS
# ==============================================
MAX_PRODUCTS_PER_USER=100
MAX_COMPETITORS_PER_PRODUCT=20
MAX_ALERTS_PER_PRODUCT=10

# ==============================================
# üìù PRODUCTION NOTES
# ==============================================
# 1. Change SECRET_KEY to a strong random value
# 2. Update all passwords and API keys
# 3. Enable HTTPS and security headers
# 4. Use external managed databases
# 5. Configure proper backup procedures